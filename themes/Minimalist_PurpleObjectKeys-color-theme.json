{
	"name": "Minimalist (Purple Object Keys)",
	"type": "light",
	/*
	 *  COLORS
	 *
	 *  light-black   #4d4d4c text
	 *  light-blue    #C3DCFF selection
	 *  light-gray    #C0C0C0 comments
	 *  lighter-gray  #dfdfdf close to hidden, markdown pontuation
	 *  green         #089C11 strings
	 *  red           #c82829 keywords
	 *  purple        #8250DF object keys
	 *  orange        #f5871f variables (this in JS)
	 *  dark-blue     #3B5BB5 entities
	 *  dark-blue2    #365f91 markdown headings (can't decide on a blue tone)
	 */
	"colors": {
		"editor.foreground": "#4d4d4c",
		"editorCursor.foreground": "#4d4d4c",
		"editor.wordHighlightBackground": "#C3DCFF",
		"list.activeSelectionBackground": "#C3DCFF",
		"list.activeSelectionForeground": "#4d4d4c",
	},
	"tokenColors": [
		{
			"name": "Comment",
			"scope": "comment",
			"settings": {
				"foreground": "#C0C0C0"
			}
		},
		{
			"name": "String",
			"scope": "string",
			"settings": {
				"foreground": "#089C11"
			}
		},
		{
			"name": "Main language constructs",
			"scope": [
				"keyword",
				"storage.type",
				"entity.name.tag"
			],
			"settings": {
				"foreground": "#c82829"
			}
		},
		{
			"name": "Variable",
			"scope": "variable.language",
			"settings": {
				"foreground": "#f5871f"
			}
		},
		{
			"name": "User defined/libs constructs",
			"scope": [
				"entity",
				"meta.tag.inline.any.html",
				"meta.tag.block.any.html",
				"constant.other.object.key"
			],
			"settings": {
				"fontStyle": "",
				"foreground": "#3B5BB5"
			}
		},
		{
			"name": "Function JS",
			"scope": "entity.name.function.js",
			"settings": {
				"fontStyle": "bold",
				"foreground": "#3B5BB5"
			}
		},
		{
			"name": "Object Key",
			"scope": "meta.object-literal.key.js,string.json.comments",
			"settings": {
				"foreground": "#8250DF",
			}
		},
		{
			"name": "HTML attributes",
			"scope": [
				"entity.other.attribute-name.html",
				"entity.other.attribute-name.id.html",
				"meta.tag.inline.any.html",
				"meta.tag.block.any.html",
				"keyword.other.unit.css"
			],
			"settings": {
				"fontStyle": "",
				"foreground": "#4d4d4c"
			}
		},

		/*************************** MARKDOWN *****************************************/
		{
			"name": "Markdown syntax decoration",
			"scope": [
				"constant.other.reference.link.markdown",
				"markup.underline.link.image.markdown",
				"markup.underline.link.markdown",
				"punctuation.definition.string.begin.markdown",
				"punctuation.definition.string.end.markdown",
				"punctuation.definition.constant.begin.markdown",
				"punctuation.definition.constant.end.markdown",
				"punctuation.definition.metadata.markdown",
				"punctuation.definition.markdown",
				"fenced_code.block.language.markdown"
			],
			"settings": {
				"foreground": "#C0C0C0",
				"fontStyle": ""
			}
		},
		{
			"name": "Markdown link decoration",
			"scope": "string.other.link.description.markdown, string.other.link.title.markdown",
			"settings": {
				"foreground": "#3B5BB5",
			}
		},
		{
			"name": "Markdown headings",
			"scope": "markup.heading.markdown, entity.name.section.markdown",
			"settings": {
				"foreground": "#365f91",
				"fontStyle": "bold"
			}
		},
		{
			"name": "Markdown h3 heading",
			"scope": [
				"heading.2.markdown punctuation.definition.heading.markdown",
				"heading.2.markdown entity.name.section.markdown",
				"heading.2.markdown string.other.link.title.markdown"
			],
			"settings": {
				"foreground": "#4D4D4C",
			}
		},
		{
			"name": "Markdown inline code",
			"scope": "markup.inline.raw.string.markdown",
			"settings": {
				"foreground": "#089C11"
			}
		},
		{
			"scope": "markup.bold.markdown",
			"settings": {
				"fontStyle": "bold"
			}
		},
		{
			"scope": "markup.italic.markdown",
			"settings": {
				"fontStyle": "italic"
			}
		}
	]
}
