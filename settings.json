    //#region UI
    "customizeUI.stylesheet": {
        "div.monaco-split-view2.horizontal.separator-border div.title-actions": "display: none !important;",                                        // Hide title actions in Zen-mode
        ".monaco-workbench .part.editor>.content .editor-group-container>.title>.label-container": "display: none !important;",                     // Hide File and title actions bar
        "div.monaco-split-view2.horizontal.separator-border > div.split-view-container > div:nth-child(2) > div > div": "top: 25%; height: 50%",    // Center vertically the text editor and reduce its height

        "[title='Open Changes']": "display: none !important;",
        "[title^='Split Editor Right']": "display: none !important;",

        ".monaco-list-row:hover:not(.selected):not(.focused)": "background-color: #ffffff !important",

        // vertical center
        ".fullscreen .scroll-decoration": "display: none !important",
        ".monaco-split-view2.horizontal.separator-border": "--separator-border: #ffffff !important",
        ".fullscreen": "top: 300px !important"
    },

    // add gray background to code blocks in markdown
    "highlight.maxMatches": 1250,
    "highlight.regexes": {
          "(```.+?```)": {
            "regexFlags": "gs",
            "decorations": [{
              "backgroundColor": "rgba(0, 0, 0, 0.03)",
              "isWholeLine": true,
            }],
            "filterLanguageRegex": "markdown",
            "filterFileRegex": ".*\\.md"
          },

        "(\\|)": {
            "filterLanguageRegex": "[markdown|javascript]",
            "decorations": [{
                "color": "rgba(0, 0, 0, 0.1)"
            }]
        }
    },

    "copyCodeBlock.formats": [
        {
            "formatName": "default",
            "codeBlockHeaderFormat": "${fullPath}:${topLineNumber}${EOL}",
            "codeBlockFooterFormat": "",
            "codeLineFormat": "${LINENUMBER}: ${CODE}${EOL}",
            "multipleSelectionCreateMultipleCodeBlocks": false,
            "multipleSelectionsBoundalyMarkerFormat": "---${EOL}",
            "forcePathSeparatorSlash": false,
            "forceSpaceIndent": false
        },
        {
            "formatName": "markdown",
            "codeBlockHeaderFormat": "${fullPath}:${topLineNumber}${EOL}```${EOL}",
            "codeBlockFooterFormat": "```${EOL}",
            "codeLineFormat": "${CODE}${EOL}",
            "multipleSelectionCreateMultipleCodeBlocks": false,
            "multipleSelectionsBoundalyMarkerFormat": "---${EOL}",
            "forcePathSeparatorSlash": true,
            "forceSpaceIndent": true
        }
    ],

    "editor.tokenColorCustomizations": {
        "[Minimalist (Purple Object Keys)]": {
            "textMateRules": [
                {
                    // Everything that is or will become a string as green (testing)
                    "name": "Template literals",
                    "scope": "meta.template.expression.js entity.name.function.js",
                    "settings": {
                        "foreground": "#089c11",
                        "fontStyle": "",
                    }
                },
            ]
        }
    },
    //#endregion

    "files.exclude": {
        "**/package-lock.json": true,
        "**/.git": true,
    },
    "search.exclude": {
        "**/node_modules": true,
    },
    "redhat.telemetry.enabled": false,
    "cSpell.enabled": false,

    "mdtableeditor.isHighlighterEnabled": false,
