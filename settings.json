    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.wordWrap": "off",
        "editor.occurrencesHighlight": false,
        "editor.renderLineHighlight": "none",
        "editor.defaultFormatter": "darkriszty.markdown-table-prettify",
    },

    "[shellscript]": {
        "editor.matchBrackets": "never",
    },

    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    "[css]": {
        "editor.defaultFormatter": "junstyle.css-formatter"
    },

    "workbench.colorCustomizations": {
        "editor.wordHighlightBackground": "#0066ff2a",

        // make PEEK VIEW lok just like regular code
        "peekView.border": "#0066ff2a",
        "peekViewEditor.background": "#ffffff",
        "peekViewEditor.matchHighlightBackground": "#ffffff",
        "peekViewEditor.matchHighlightBorder": "#ffffff",
        "peekViewResult.background": "#ffffff",
        "peekViewResult.selectionBackground": "#ffffff",
        "peekViewResult.matchHighlightBackground": "#ffffff",
        "peekViewTitle.background": "#ffffff",
        // "editorError.foreground": "#ffffff"
    },

    "gitlens.menus": {
        "editor"        : {"blame": false, "clipboard": true, "compare": true, "details": false, "history": false, "remote": false},
        "editorTab"     : {"clipboard": true, "compare": true, "history": true, "remote": true},
        "explorer"      : {"clipboard": true, "compare": true, "history": true, "remote": true},
        "scmGroup"      : {"compare": true, "openClose": true, "stash": true, "stashInline": true},
        "scmItem"       : {"clipboard": true, "compare": true, "history": true, "remote": true, "stash": true},
        "editorGroup"   : false,
    },

    "commands.commands": {
        "forceMarkdown"  : { "command": "commands.setEditorLanguage", "args": "markdown" },
        "forceJavascript": { "command": "commands.setEditorLanguage", "args": "javascript" },
    },

    "macros.list": {
        "touchSave"      : ["workbench.action.files.save", "workbench.action.files.saveAll"],
        "downAndOpen"    : ["list.focusDown", "filesExplorer.openFilePreserveFocus"], // "list.selectAndPreserveFocus"
        "upAndOpen"      : ["list.focusUp", "filesExplorer.openFilePreserveFocus"], // "list.selectAndPreserveFocus"
        "deepGoTo"       : ["workbench.action.splitEditor", "editor.action.revealDefinition", "editor.action.revealDefinition", "editor.action.revealDefinition", "workbench.action.closeOtherEditors"],
        "peekTest"       : ["editor.action.peekDefinition", "list.focusLast", "list.expand", "list.focusLast"],
    },
